@model List<Computer>

@{
    ViewBag.Title = "Title";
    Layout = "_Layout";
}


<div>
    <h2>Lista Komputerow</h2>
    <a class="btn btn-outline-primary" asp-controller="Computer" asp-action="Create" >Dodaj Komputer</a>
    <h3>Lista</h3>
    @if(Model.Count > 0){
        <table class="table">
            <thead>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].ManufacturerName)</th>
            <th>Akcje</th>

            </thead>
            <tbody>
            @{
                foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.ManufacturerName</td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@obj.Id">Szczegóły</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">Edycja</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">Usuń</a>
                        </td>
                    </tr>
                }
            }
            
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-danger">Brak komputerów</h3>
    }
    </div>