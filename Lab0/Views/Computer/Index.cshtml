@using Lab0.Models.Paging
@model PagingListAsync<Computer>
@{
    CancellationToken token = CancellationToken.None;
}

<h1>Lista komputerów</h1>
<a class="btn btn-primary" asp-controller="Computer" asp-action="Create">Dodaj</a>
<table class="table">
    <thead>
    <tr>
        <th>Nazwa</th>
        <th>Producent</th>
        <th>Procesor</th>
        <th>Karta Graficzna</th>
        <th>RAM</th>
        <th>Data Produkcji</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @await foreach (var obj in Model.Data)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.ManufacturerName</td>
            <td>@obj.Cpu</td>
            <td>@obj.Gpu</td>
            <td>@obj.Ram</td>
            <td>@obj.ProductionDate</td>
            <td>
                <a class="btn btn-primary" asp-controller="Computer" asp-action="Edit" asp-route-id="@obj.Id">Edytuj</a>
                <a class="btn btn-info" asp-controller="Computer" asp-action="Details" asp-route-id="@obj.Id">Szczegóły</a>
                <a class="btn btn-danger" asp-controller="Computer" asp-action="Delete" asp-route-id="@obj.Id">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav aria-label="Computer page navigation"> 
    <ul class="pagination"> 
        @if (Model.IsPrevious) 
        { 
            <li class="page-item">
                <a class="page-link" 
                   asp-controller="Computer" 
                   asp-action="Index" 
                   asp-route-page="@(Model.Page - 1)" 
                   asp-route-size="@Model.Size">
                    Poprzednia
                </a>
            </li> 
        } 
        else 
        { 
            <li class="page-item disabled">
                <a class="page-link">Poprzednia</a>
            </li> 
        } 
        <li class="page-item disabled">
            <a class="page-link" >@Model.Page</a>
        </li> 
        @if (Model.IsNext) 
        { 
            <li class="page-item">
                <a class="page-link" 
                   asp-controller="Computer" 
                   asp-action="Index" 
                   asp-route-page="@(Model.Page + 1)" 
                   asp-route-size="@Model.Size">
                    Następna
                </a>
            </li> 
        } 
        else 
        { 
            <li class="page-item disabled">
                <a class="page-link">Następna</a>
            </li> 
        } 
    </ul>
</nav>