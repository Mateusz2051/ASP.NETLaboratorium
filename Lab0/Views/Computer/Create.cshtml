@model Computer

@{
    ViewBag.Title = "Title";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h2>Dodaj Komputer</h2>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label" asp-for="Cpu"></label>
            <input class="form-control" asp-for="Cpu"/>
            <span class="text-danger" asp-validation-for="Cpu"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Ram"></label>
            <input class="form-control" asp-for="Ram"/>
            <span class="text-danger" asp-validation-for="Ram"></span>
        </div>

        
        <div class="mb-3">
            <label class="form-label" asp-for="Gpu"></label>
            <input class="form-control" asp-for="Gpu"/>
            <span class="text-danger" asp-validation-for="Gpu"></span>
        </div>
        
        
        <div class="mb-3">
        <label class="form-label">Filtr producentów</label>
        <input class="form-control" type="text" id="filter" placeholder="Wpisz aby filtrować..." />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="ManufacturerId"></label>
        <select class="form-control" asp-for="ManufacturerId" asp-items="@Model.Manufacturers" id="ManufacturerId"></select>
        <span class="text-danger" asp-validation-for="ManufacturerId"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="ProductionDate"></label>
            <input class="form-control" asp-for="ProductionDate"/>
            <span class="text-danger" asp-validation-for="ProductionDate"></span>
        </div>
        
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Utwórz</button>
        </div>
    </form>
</div>
</body>
</html>